@model FinanceApp.Models.Expense

<link rel="stylesheet" href="@Url.Content("~/css/expenses.css")" />

<div class="edit-expense-wrapper">
    <h2>Edit Expense</h2>

    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="form-group">
            <label>Date (locked)</label>
            <input value="@Model.Date.ToString("yyyy-MM-dd")"
                   class="form-control"
                   disabled />
        </div>

        <button type="submit" class="btn btn-success mt-2">Edit</button>
    </form>
</div>